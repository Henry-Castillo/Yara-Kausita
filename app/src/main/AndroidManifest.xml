<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cibertec">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:resizeableActivity="false"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="n">
        <activity
            android:name="com.example.cibertec.activity.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.cibertec.activity.LogIn"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.cibertec.activity.RegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.cibertec.activity.ForgotPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.cibertec.activity.ResetPassword"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.cibertec.activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.cibertec.activity.CartActivity"
            android:screenOrientation="portrait" />
    </application>
</manifest>